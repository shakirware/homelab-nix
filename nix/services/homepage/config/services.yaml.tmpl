- Media:
    - Jellyfin:
        icon: mdi-jellyfish
        href: http://__JELLYFIN_HOST__
        description: Media server
        ping: __JELLYFIN_HOST__
        siteMonitor: http://__JELLYFIN_HOST__
        widget:
          type: jellyfin
          url: http://__JELLYFIN_HOST__
          key: {{HOMEPAGE_VAR_JELLYFIN_KEY}}
          showEpisodeNumber: true
          enableNowPlaying: true
          expandOneStreamToTwoRows: false

    - Jellyseerr:
        icon: mdi-movie-search
        href: http://__JELLYSEERR_HOST__
        description: Requests & approvals for Jellyfin
        ping: __JELLYSEERR_HOST__
        siteMonitor: http://__JELLYSEERR_HOST__
        widget:
          type: jellyseerr
          url: http://__JELLYSEERR_HOST__
          key: {{HOMEPAGE_VAR_JELLYSEERR_KEY}}
          fields: ["pending", "approved", "available", "issues"]
          highlight:
            pending:
              numeric:
                - level: danger
                  when: gte
                  value: 25
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            issues:
              numeric:
                - level: danger
                  when: gte
                  value: 5
                - level: warn
                  when: gte
                  value: 1
                - level: good
                  when: eq
                  value: 0

    - Jellystat:
        icon: mdi-chart-areaspline
        href: http://__JELLYSTAT_HOST__
        description: Playback stats & activity dashboard
        ping: __JELLYSTAT_HOST__
        siteMonitor: http://__JELLYSTAT_HOST__
        widget:
          type: jellystat
          url: http://__JELLYSTAT_HOST__
          key: {{HOMEPAGE_VAR_JELLYSTAT_KEY}}
          days: 30
          fields: ["movies", "episodes", "other"]

- Automation:
    - Sonarr:
        icon: mdi-television-classic
        href: http://__SONARR_HOST__
        description: TV shows automation
        ping: __SONARR_HOST__
        siteMonitor: http://__SONARR_HOST__
        widget:
          type: sonarr
          url: http://__SONARR_HOST__
          key: {{HOMEPAGE_VAR_SONARR_KEY}}
          enableQueue: false
          fields: ["wanted", "queued", "series"]
          highlight:
            queued:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            wanted:
              numeric:
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10

    - Radarr:
        icon: mdi-movie-open
        href: http://__RADARR_HOST__
        description: Movies automation
        ping: __RADARR_HOST__
        siteMonitor: http://__RADARR_HOST__
        widget:
          type: radarr
          url: http://__RADARR_HOST__
          key: {{HOMEPAGE_VAR_RADARR_KEY}}
          enableQueue: true
          fields: ["wanted", "missing", "queued", "movies"]
          highlight:
            queued:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            missing:
              numeric:
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10

    - Prowlarr:
        icon: mdi-magnify-scan
        href: http://__PROWLARR_HOST__
        description: Indexer manager
        ping: __PROWLARR_HOST__
        siteMonitor: http://__PROWLARR_HOST__
        widget:
          type: prowlarr
          url: http://__PROWLARR_HOST__
          key: {{HOMEPAGE_VAR_PROWLARR_KEY}}
          fields: ["numberOfQueries", "numberOfFailQueries", "numberOfGrabs", "numberOfFailGrabs"]
          highlight:
            numberOfFailQueries:
              numeric:
                - level: danger
                  when: gte
                  value: 50
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10
            numberOfFailGrabs:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: lt
                  value: 5

    - Profilarr:
        icon: mdi-format-list-bulleted
        href: http://__PROFILARR_HOST__
        description: Profiles/quality automation for Arr apps
        ping: __PROFILARR_HOST__
        siteMonitor: http://__PROFILARR_HOST__

- Downloading:
    - qBittorrent:
        icon: mdi-download-network
        href: http://__QBITTORRENT_HOST__
        description: Downloader UI
        ping: __QBITTORRENT_HOST__
        siteMonitor: http://__QBITTORRENT_HOST__
        widget:
          type: qbittorrent
          url: http://__QBITTORRENT_HOST__
          username: {{HOMEPAGE_VAR_QBITTORRENT_USER}}
          password: {{HOMEPAGE_VAR_QBITTORRENT_PASS}}
          fields: ["download", "upload", "seed", "leech"]
          enableLeechProgress: true
          enableLeechSize: true
          highlight:
            leech:
              numeric:
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: lt
                  value: 5

- Monitoring:
    - Homepage:
        icon: mdi-view-dashboard
        href: http://__HOMEPAGE_HOST__
        description: This dashboard
        ping: __HOMEPAGE_HOST__
        siteMonitor: http://__HOMEPAGE_HOST__

    - AdGuard:
        icon: mdi-shield-check
        href: http://__ADGUARD_HOST__
        description: DNS & ad blocking
        ping: __ADGUARD_HOST__
        siteMonitor: http://__ADGUARD_HOST__
        widget:
          type: adguard
          url: http://__ADGUARD_HOST__
          username: {{HOMEPAGE_VAR_ADGUARD_USER}}
          password: {{HOMEPAGE_VAR_ADGUARD_PASS}}
          fields: ["queries", "blocked", "filtered", "latency"]
          highlight:
            latency:
              numeric:
                - level: danger
                  when: gte
                  value: 300
                - level: warn
                  when: gte
                  value: 100
                - level: good
                  when: lt
                  value: 100

    - Proxmox:
        icon: mdi-server
        href: https://__PROXMOX_HOST__:8006
        description: Hypervisor UI
        ping: __PROXMOX_HOST__
        widget:
          type: proxmox
          url: https://__PROXMOX_HOST__:8006
          username: {{HOMEPAGE_VAR_PROXMOX_TOKEN}}
          password: {{HOMEPAGE_VAR_PROXMOX_SECRET}}
          node: pve

    - Router:
        icon: mdi-router-wireless
        href: http://__ROUTER_HOST__
        description: Gateway admin
        ping: __ROUTER_HOST__
        siteMonitor: http://__ROUTER_HOST__
