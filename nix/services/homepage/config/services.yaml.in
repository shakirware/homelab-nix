- Media:
    - Jellyfin:
        icon: mdi-jellyfish
        href: https://@JELLYFIN_HOST@
        description: Media server
        siteMonitor: https://@JELLYFIN_HOST@
        widget:
          type: jellyfin
          url: http://@MEDIA_IP@:8096
          key: {{HOMEPAGE_VAR_JELLYFIN_KEY}}
          showEpisodeNumber: true
          enableNowPlaying: true
          expandOneStreamToTwoRows: false

    - Seerr:
        icon: mdi-movie-search
        href: https://@SEERR_HOST@
        description: Requests & approvals for Jellyfin
        siteMonitor: https://@SEERR_HOST@
        widget:
          type: jellyseerr
          url: http://@MEDIA_IP@:5055
          key: {{HOMEPAGE_VAR_SEERR_KEY}}
          fields: ["pending", "approved", "available", "issues"]
          highlight:
            pending:
              numeric:
                - level: danger
                  when: gte
                  value: 25
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            issues:
              numeric:
                - level: danger
                  when: gte
                  value: 5
                - level: warn
                  when: gte
                  value: 1
                - level: good
                  when: eq
                  value: 0

    - Jellystat:
        icon: mdi-chart-areaspline
        href: https://@JELLYSTAT_HOST@
        description: Playback stats & activity dashboard
        siteMonitor: https://@JELLYSTAT_HOST@
        widget:
          type: jellystat
          url: http://@MEDIA_IP@:4001
          key: {{HOMEPAGE_VAR_JELLYSTAT_KEY}}
          days: 30
          fields: ["movies", "episodes", "other"]

    - Tracearr:
        icon: mdi-chart-timeline-variant
        href: https://@TRACEARR_HOST@
        description: Media activity & tracing
        siteMonitor: https://@TRACEARR_HOST@

    - Tuliprox:
        icon: mdi-television-play
        href: https://@IPTV_HOST@
        description: Tuliprox IPTV (Xtream)
        siteMonitor: https://@IPTV_HOST@

- Automation:
    - Sonarr:
        icon: mdi-television-classic
        href: https://@SONARR_HOST@
        description: TV shows automation
        siteMonitor: https://@SONARR_HOST@
        widget:
          type: sonarr
          url: http://@MEDIA_IP@:8989
          key: {{HOMEPAGE_VAR_SONARR_KEY}}
          enableQueue: false
          fields: ["wanted", "queued", "series"]
          highlight:
            queued:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            wanted:
              numeric:
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10

    - Radarr:
        icon: mdi-movie-open
        href: https://@RADARR_HOST@
        description: Movies automation
        siteMonitor: https://@RADARR_HOST@
        widget:
          type: radarr
          url: http://@MEDIA_IP@:7878
          key: {{HOMEPAGE_VAR_RADARR_KEY}}
          enableQueue: true
          fields: ["wanted", "missing", "queued", "movies"]
          highlight:
            queued:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: eq
                  value: 0
            missing:
              numeric:
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10

    - Prowlarr:
        icon: mdi-magnify-scan
        href: https://@PROWLARR_HOST@
        description: Indexer manager
        siteMonitor: https://@PROWLARR_HOST@
        widget:
          type: prowlarr
          url: http://@MEDIA_IP@:9696
          key: {{HOMEPAGE_VAR_PROWLARR_KEY}}
          fields: ["numberOfQueries", "numberOfFailQueries", "numberOfGrabs", "numberOfFailGrabs"]
          highlight:
            numberOfFailQueries:
              numeric:
                - level: danger
                  when: gte
                  value: 50
                - level: warn
                  when: gte
                  value: 10
                - level: good
                  when: lt
                  value: 10
            numberOfFailGrabs:
              numeric:
                - level: danger
                  when: gte
                  value: 20
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: lt
                  value: 5

    - Profilarr:
        icon: mdi-format-list-bulleted
        href: https://@PROFILARR_HOST@
        description: Profiles/quality automation for Arr apps
        siteMonitor: https://@PROFILARR_HOST@

- Downloading:
    - qBittorrent:
        icon: mdi-download-network
        href: https://@QBITTORRENT_HOST@
        description: Downloader UI
        siteMonitor: https://@QBITTORRENT_HOST@
        widget:
          type: qbittorrent
          url: http://@MEDIA_IP@:8080
          username: {{HOMEPAGE_VAR_QBITTORRENT_USER}}
          password: {{HOMEPAGE_VAR_QBITTORRENT_PASS}}
          fields: ["download", "upload", "seed", "leech"]
          enableLeechProgress: true
          enableLeechSize: true
          highlight:
            leech:
              numeric:
                - level: warn
                  when: gte
                  value: 5
                - level: good
                  when: lt
                  value: 5

- Monitoring:
    - Homepage:
        icon: mdi-view-dashboard
        href: https://@HOMEPAGE_HOST@
        description: This dashboard
        siteMonitor: https://@HOMEPAGE_HOST@

    - AdGuard:
        icon: mdi-shield-check
        href: https://@ADGUARD_HOST@
        description: DNS & ad blocking
        siteMonitor: https://@ADGUARD_HOST@
        widget:
          type: adguard
          url: http://@GW_IP@:3000
          username: {{HOMEPAGE_VAR_ADGUARD_USER}}
          password: {{HOMEPAGE_VAR_ADGUARD_PASS}}
          fields: ["queries", "blocked", "filtered", "latency"]
          highlight:
            latency:
              numeric:
                - level: danger
                  when: gte
                  value: 300
                - level: warn
                  when: gte
                  value: 100
                - level: good
                  when: lt
                  value: 100

    - Proxmox:
        icon: mdi-server
        href: https://@PROXMOX_HOST@
        description: Hypervisor UI
        siteMonitor: https://@PROXMOX_HOST@
        widget:
          type: proxmox
          url: https://@PROXMOX_IP@:8006
          username: {{HOMEPAGE_VAR_PROXMOX_TOKEN}}
          password: {{HOMEPAGE_VAR_PROXMOX_SECRET}}
          node: pve

    - Obsidian Sync (CouchDB):
        icon: mdi-notebook
        href: https://@OBSIDIAN_SYNC_HOST@/_utils/
        description: CouchDB UI
        siteMonitor: https://@OBSIDIAN_SYNC_HOST@

    - Router:
        icon: mdi-router-wireless
        href: http://@ROUTER_IP@
        description: Gateway admin
        siteMonitor: http://@ROUTER_IP@

    - Grafana:
        icon: mdi-chart-box
        href: https://@GRAFANA_HOST@
        description: Dashboards (Prometheus + Loki)
        siteMonitor: https://@GRAFANA_HOST@
        widget:
          type: grafana
          version: 2
          url: http://@MONITORING_IP@:3000
          username: {{HOMEPAGE_VAR_GRAFANA_USER}}
          password: {{HOMEPAGE_VAR_GRAFANA_PASS}}
          fields: ["dashboards", "datasources", "totalalerts", "alertstriggered"]

    - Prometheus:
        icon: mdi-fire
        href: https://@PROMETHEUS_HOST@
        description: Targets up/down
        siteMonitor: https://@PROMETHEUS_HOST@
        widget:
          type: prometheus
          url: http://@MONITORING_IP@:9090
          fields: ["targets_up", "targets_down", "targets_total"]

