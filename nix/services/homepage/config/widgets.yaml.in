- logo:
    icon: mdi-server

- greeting:
    text_size: xl
    text: Homelab

- resources:
    label: Media Server
    cpu: true
    memory: true

- resources:
    label: Storage
    expanded: true
    disk:
      - /srv/media

- openmeteo:
    label: London
    latitude: 52.629285
    longitude: 1.29849
    timezone: Europe/London
    units: metric
    cache: 5
    format:
      maximumFractionDigits: 1

- datetime:
    text_size: xl
    locale: en-GB
    format:
      dateStyle: medium
      timeStyle: short
      hourCycle: h23

- glances:
    label: Proxmox Host
    href: https://@PROXMOX_HOST@
    url: http://@PROXMOX_IP@:61208
    version: 4
    cpu: true
    mem: true
    uptime: true
    cputemp: true
    disk:
      - /
    expanded: true
